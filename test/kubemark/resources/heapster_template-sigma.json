{
	"kind": "ReplicationController",
	"apiVersion": "v1",
	"metadata": {
		"name": "heapster-v1.3.0",
		"labels": {
			"k8s-app": "heapster",
			"version": "v1.3.0"
		}
	},
	"spec": {
		"replicas": 1,
		"selector": {
			"k8s-app": "heapster",
			"version": "v1.3.0"
		},
		"template": {
			"metadata": {
				"labels": {
					"k8s-app": "heapster",
					"version": "v1.3.0"
				}
			},
			"spec": {
				"affinity": {{AFFINITY}},
				"tolerations": [
					{
						"key": "sigma.ali/resource-pool",
						"operator": "Exists",
						"effect": "NoSchedule"
					}
					{{TOLERATION}}
				],
				"volumes": [
					{
						"name": "kubeconfig-volume",
						"secret": {
							"secretName": "kubeconfig"
						}
					}
				],
				"containers": [
				{
					"name": "heapster",
					"image": "reg.docker.alibaba-inc.com/k8s-test/heapster:v1.3.0",
					"resources": {
						"requests": {
							"cpu": "{{METRICS_CPU}}m",
							"memory": "{{METRICS_MEM}}Mi"
						}
					},
					"command": [
						"/heapster"
					],
					"args": [
						"--source=kubernetes:https://{{MASTER_IP}}:443?inClusterConfig=0&useServiceAccount=0&auth=/kubeconfig/heapster.kubeconfig"
					],
					"volumeMounts": [
						{
							"name": "kubeconfig-volume",
							"mountPath": "/kubeconfig"
						}
					]
				},
				{
					"name": "eventer",
					"image": "reg.docker.alibaba-inc.com/k8s-test/heapster:v1.3.0",
					"resources": {
						"requests": {
							"memory": "{{EVENTER_MEM}}Ki"
						}
					},
					"command": [
						"/eventer"
					],
					"args": [
						"--source=kubernetes:https://{{MASTER_IP}}:443?inClusterConfig=0&useServiceAccount=0&auth=/kubeconfig/heapster.kubeconfig"
					],
					"volumeMounts": [
						{
							"name": "kubeconfig-volume",
							"mountPath": "/kubeconfig"
						}
					]

				}]
			}
		}
	}
}

