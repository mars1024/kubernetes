{
    "apiVersion": "apps/v1",
    "kind": "Deployment",
    "metadata": {
        "name": "nginx-deploy"
    },
    "spec": {
        "replicas": 1,
        "selector": {
            "matchLabels": {
                "app": "nginx"
            }
        },
        "template": {
            "metadata": {
                "labels": {
                    "app": "nginx"
                }
            },
            "spec": {
                "containers": [
                    {
                        "image": "reg.docker.alibaba-inc.com/k8s-test/nginx:1.15.0",
                        "imagePullPolicy": "IfNotPresent",
                        "name": "nginx"
                    }
                ]
            }
        }
    }
}
